# --- Timings (in seconds) ---
# How often to check the source URLs for new proxy lists
SOURCE_PULL_INTERVAL=300
# How often to test all proxies in our pool
PROXY_TEST_INTERVAL=10

# The number of recent test results to store for calculating stability
# A proxy will be removed if its history window is full and it has 0 successes
PROXY_HISTORY_WINDOW_SIZE=12

# âœ¨ NEW: Minimum stability score (0.0 to 1.0) for a proxy to be included in the /proxies endpoint.
PROXY_MINIMUM_STABILITY=0.5

# --- API Security ---
# The secret token that clients must provide to access the API
API_SECRET_TOKEN="change-this-secret-token"
